<?xml version="1.0" encoding="utf-8"?>

<!-- Layout needs cleaned up a bit, but has the basic components -->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="weatherSummary" type="com.acme.weather.model.api.WeatherSummary" />
        <variable name="itemClickListener" type="com.acme.weather.view.ItemClickListener"/>
    </data>

    <!--android:background="@{vm.weatherType()}"-->
        <android.support.constraint.ConstraintLayout
            android:background="@color/bg_snowy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:onClick="@{() ->  itemClickListener.onClick(weatherSummary)}">

            <!--android:text="@{vm.currentTemp}"-->
            <TextView
                android:id="@+id/currentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="86"
                android:textSize="64sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="86" />

            <TextView
                android:id="@+id/locationName"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="8dp"
                android:text="Bellflower, CA"
                android:textSize="12sp"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintTop_toBottomOf="@id/currentTemp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/currentTemp"
                />

            <!--android:text="@{vm.scaleType}"-->
            <TextView
                android:id="@+id/scaleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/currentTemp"
                app:layout_constraintStart_toEndOf="@id/currentTemp"
                app:layout_constraintTop_toTopOf="@id/currentTemp"
                app:layout_constraintVertical_bias="0.32"
                tools:text="F" />

            <!--android:text="@{@string/highTemp(vm.high())}"-->
            <TextView
                android:id="@+id/todayHighTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="High: 96"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/todayLowTemp"
                app:layout_constraintEnd_toStartOf="@+id/weather_icon"
                app:layout_constraintStart_toEndOf="@id/scaleType"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.62"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="High: 96" />

            <!--android:text="@{@string/lowTemp(vm.low())}"-->
            <TextView
                android:id="@+id/todayLowTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="Low: 22"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/weather_icon"
                app:layout_constraintStart_toEndOf="@id/scaleType"
                app:layout_constraintTop_toBottomOf="@+id/todayHighTemp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Low: 22" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/snowy"
                android:scaleType="center"
                android:src="@mipmap/ic_snowy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

</layout>
